# === API Keys ===
OPENAI_API_KEY=sk-xxx                        # OpenAI: STT + TTS + Embedding
ANTHROPIC_API_KEY=sk-ant-xxx                 # Anthropic: Claude LLM
QDRANT_URL=https://xxx.aws.cloud.qdrant.io   # Qdrant Cloud: BV-RAG cluster URL
QDRANT_API_KEY=xxx                           # Qdrant Cloud: API Key

# === Database (Railway auto-injects, or set manually for local dev) ===
DATABASE_URL=postgresql://user:pass@host:5432/dbname
REDIS_URL=redis://host:6379

# === Model Configuration ===
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSIONS=1024
LLM_MODEL_PRIMARY=claude-sonnet-4-20250514
LLM_MODEL_FAST=claude-haiku-4-5-20251001
STT_MODEL=gpt-4o-mini-transcribe
TTS_MODEL=gpt-4o-mini-tts
TTS_VOICE=ash

# === Reranking Configuration ===
COHERE_API_KEY=your_cohere_api_key_here
RERANKER_MODEL=rerank-multilingual-v3.0
RERANKER_ENABLED=true
UTILITY_RERANKER_ENABLED=true
UTILITY_RERANKER_ALPHA=0.3

# === System Configuration ===
PORT=8000
ENVIRONMENT=development
LOG_LEVEL=INFO
MAX_CONVERSATION_TURNS=10
SESSION_TTL_HOURS=24
